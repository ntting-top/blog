.floating_page
  background #164CCA
  background-image linear-gradient(rgba(3, 192, 60, .3) 1px, transparent 1px), linear-gradient(90deg, rgba(3, 192, 60, .3) 1px, transparent 1px)
  background-size 1em 1em
  .color_pick
    position fixed
    top 4px
    right 4px
    outline none
    border none
    -webkit-appearance none
    height 30px
    width 64px
    padding 0 6px
    background rgba(0, 0, 0, .4)
    box-shadow 0 1px 4px rgba(0, 0, 0, .25)
    border-radius 4px
  .meta
    position fixed
    top 20%
    left 50%
    transform translate(-50%, -50%)
    .text
      line-height 1
      font-size 14px
      color rgba(255, 255, 255, .5)
      text-shadow 1px 1px 1px rgba(0, 0, 0, .1), 2px 2px 2px rgba(0, 0, 0, .1), 3px 3px 3px rgba(0, 0, 0, .1)
      position relative
      top -10px
      left 6px
      a
        text-decoration none
        color rgba(255, 255, 0, .6)
        transition color .25s ease-in-out
        &:hover
          color rgba(255, 255, 80, 1)
    .personal_intro
      color rgba(255, 255, 255, 1)
      font-size 20px
      display flex
      flex-direction column
      align-items flex-start
      line-height 0.2
      

  